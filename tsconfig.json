{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
  },
  "include": ["src", "environment.d.ts"],
  "exclude": ["test"],
}